{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", ".webpack/**/*", ".vscode/**/*", "*.config.cjs"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonJS",
    "target": "ES2022",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist"
  }
}
