{
  "compilerOptions": {
    "target": "es6",
    "module": "commonJS",
    "outDir": "dist",
    "sourceMap": false,
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", ".webpack/**/*", ".vscode/**/*", "*.config.cjs"]
}
